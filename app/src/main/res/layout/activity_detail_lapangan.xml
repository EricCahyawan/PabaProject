<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".William.DetailLapangan"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@drawable/kembali" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="Detail Lapangan"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="0dp"
        app:cardBackgroundColor="#3C3D37" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/gambarLapangan">

    </ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lapangan Badminton 1"
                android:textSize="24sp"
                android:id="@+id/namaLapangan"
                android:textColor="@color/black"
                >

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:gravity="start"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:gravity="start"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:gravity="start"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:gravity="start"
                    >

                </ImageView>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/star"
                    android:gravity="start"
                    >

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/time">

                </ImageView>
                <TextView
                    android:id="@+id/jamOperasional"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="06.00 - 23.59 WIB"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/money">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/hargaLapangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.50.000"
                    android:textSize="16sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black">

                </TextView>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textSize="24sp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl ......"
                android:layout_marginTop="8dp"
                android:id="@+id/lokasiLapangan"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="24sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black">

            </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:id="@+id/deskripsiLapangan">

                </TextView>

                <Button
                    android:id="@+id/pindah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:backgroundTint="#697565"
                    android:layout_gravity="bottom"
                    android:textColor="@color/white"
                    android:text="Pesan Lapangan">

                </Button>

        </LinearLayout>



    </ScrollView>






</LinearLayout>