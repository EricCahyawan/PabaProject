<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahPromo"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardBackgroundColor="#ECDFCC"
        app:cardCornerRadius="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Halo,"
            android:textColor="#181C14"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:text="ADMIN"
            android:textColor="#181C14"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnKembali"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/kembali" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="123dp"
            app:cardBackgroundColor="#3C3D37" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Tambah Promo Baru"
        android:textSize="22dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNamaPromo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:hint="Nama Promo 'Promo -'"
        android:padding="8dp" />
    <EditText
        android:id="@+id/etLinkGambar"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Link Gambar 'URL'"
        android:padding="8dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#697565"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/btnTambah"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/tambah"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#3C3D37" />

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginTop="20dp"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:text="Ketentuan Penamaan Promo"-->
<!--        android:textSize="16dp"-->
<!--        android:textStyle="bold" />-->

<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginLeft="10dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:text="1. Diawali dengan huruf kapital. \n2. Diawali dengan nama 'Promo'.\n3. Menggunakan kata - kata yang simpel \n4. contoh 'Promo Natal'"-->
<!--        android:textSize="15dp"-->

<!--        />-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Promo Yang Tersedia Saat Ini"
        android:textSize="16dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPromo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>